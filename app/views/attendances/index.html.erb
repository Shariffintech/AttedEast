<% if user_signed_in? %>
<div class="container" style="margin-top: 15px">
  <h2> Attendance Logs </h2>

  <br>

  <table class="table" width="75%">

    <thead>

        <td>Student Name </td>
        <td>Student ID </td>
        <td>Status</td>

    </thead>

    <tbody>
      <% @attendances.each do |attendance| %>
        <tr>
          <td><%= attendance.student_name %></td>
          <td><%= attendance.student_id %></td>
          <td><%= attendance.status %></td>
          <td><%= @lecture.attendances.name %></td>
          <td><%= link_to 'View Attendance Log', lecture_attendance_path(@lecture.id, attendance), class:"button is-light" %></td>
          <td><%= link_to 'Show lecture', [@lecture], class:"button is-light"%></td>
          <td><%= link_to 'Edit', edit_lecture_attendance_path(@lecture, attendance), class:"button is-light" %></td>
          <td><%= link_to 'Delete log', lecture_attendance_path(@lecture, attendance), method: :delete, data: { confirm: 'Are you sure?' }, class:"button is-dark" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Create new attendance', new_lecture_attendance_path(@lecture), class:"button is-light" %>
  <% else %>
    <%= link_to "Please Sign in", signin_path %> 
    <br/>
  <% end %>
</div>